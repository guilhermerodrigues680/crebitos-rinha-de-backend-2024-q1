    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch main",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main/main.go",
            "env": {
                "PORT": "9999", // sobrescreve a porta padrão com a porta para testes
                "DB_HOSTNAME": "localhost", // obrigatório
                "API_USE_DB_FUNC": "true", // habilita o uso de funções no banco, por padrão é desabilitado
            }
        }
    ]
}